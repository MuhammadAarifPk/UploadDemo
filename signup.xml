<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/h2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0000"
        tools:context="com.subia.home.SignUp">


        <TextView
            android:textColor="@color/black"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="Enter your details"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/submit"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="41dp"
            android:layout_marginTop="25dp"
            android:layout_weight=".70"
            android:background="@drawable/editt"
            android:ems="10"
            android:hint="FirstName"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/fname"
            android:layout_alignBottom="@+id/fname"
            android:layout_alignStart="@+id/submit"
            android:layout_marginStart="48dp"
            android:layout_weight=".70"
            android:background="@drawable/editt"
            android:ems="10"
            android:hint="LastName"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:textColorHint="@color/black"
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/fname"
            android:layout_marginTop="16dp"
            android:background="@drawable/editt"
            android:ems="10"
            android:hint="Email"
            android:inputType="textWebEmailAddress" />

        <EditText
            android:textColorHint="@color/black"
            android:id="@+id/phno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email"
            android:layout_marginTop="15dp"
            android:background="@drawable/editt"
            android:ems="10"
            android:hint="Mobile No."
            android:inputType="number" />

        <EditText
            android:textColorHint="@color/black"
            android:id="@+id/pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phno"
            android:layout_marginTop="16dp"
            android:background="@drawable/editt"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />


        <EditText
            android:textColorHint="@color/black"
            android:id="@+id/cnfwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pwd"
            android:layout_marginTop="16dp"
            android:background="@drawable/editt"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/cnfwd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button"
            android:onClick="onSign"
            android:text="Submit" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
